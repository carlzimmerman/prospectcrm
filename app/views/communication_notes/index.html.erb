<h1>Listing Communication Notes</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Notes</th>
      <th>Prospect status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communication_notes.each do |communication_note| %>
      <tr>
        <td><%= communication_note.type %></td>
        <td><%= communication_note.notes %></td>
        <td><%= communication_note.prospect_status %></td>
        <td><%= link_to 'Show', communication_note %></td>
        <td><%= link_to 'Edit', edit_communication_note_path(communication_note) %></td>
        <td><%= link_to 'Destroy', communication_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

